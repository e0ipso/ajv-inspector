{
  "$schema": "http://json-schema.org/schema#",
  "title": "Common types re-usable across different schemas",
  "$id": "common.json#",
  "time": {
    "type": "string",
    "description": "Not ISO-8601 compliant."
  },
  "custom": {
    "type": "object",
    "properties": {
      "lorem": {
        "type": "number"
      }
    }
  },
  "multilingualString": {
    "type": "array",
    "items": {
      "$ref": "#/localizedStringValue"
    }
  },
  "localizedStringValue": {
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
      "^[a-z][A-Za-z0-9]*(Value)$": {
        "description": "The localized string.",
        "type": "string"
      }
    },
    "properties": {
      "locale": {
        "$ref": "#/locale"
      }
    }
  },
  "locale": {
    "type": "string",
    "description": "The language tag as in compliance with BCP-47.",
    "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
  },
  "systemString": {
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
      "^[a-z][A-Za-z0-9]*(Value)$": {
        "description": "The qualified string.",
        "type": "string"
      }
    },
    "properties": {
      "systemCode": {
        "type": "string"
      }
    }
  }
}